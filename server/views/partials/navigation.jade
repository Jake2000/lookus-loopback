    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') LoopBack
    #navbar.navbar-collapse.collapse
      if user
        //- User *is* logged In
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/explorer') API Explorer
          li
            a(href='/api/users/logout') Log Out
      else
        //- User is *not* Logged In
        ul.nav.navbar-nav.navbar-right
          li(class=url=='/'?'active':undefined)
            a(href='/') Home
          li(class=url=='/map'?'active':undefined)
            a(href='/map') Map
          li(class=url=='/ws'?'active':undefined)
            a(href='/ws') Web Sockets
          li
            a(href='/explorer') API Explorer
