extends ../layouts/layout

block content
  .row
    .col-md-6.col-md-offset-3
      form.local-login(role='form', action='/api/users/login', method='post')
        .form-group
          label(for='email') Your email
          input#email.form-control(type='email', name='email', placeholder='Enter email')
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', placeholder='Password')
        button.btn.btn-default(type='submit') Submit
        span.main-error-block.text-danger.small(style="display:none;margin-left:10px")
      br
