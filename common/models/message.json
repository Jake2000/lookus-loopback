{
  "name": "message",
  "plural": "messages",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "body": {
      "type": "string",
      "required": true,
      "description": "Текст сообщения"
    },
    "subject": {
      "type": "string",
      "description": "Тема сообщения (при автосоздании диалога - заголовок диалога)"
    },
    "created": {
      "type": "date",
      "description": "Дата и время создания"
    }
  },
  "validations": [],
  "relations": {
    "dialog": {
      "type": "belongsTo",
      "model": "dialog",
      "foreignKey": "dialog_id"
    },
    "sender": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "sender_id"
    },
    "recipient": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "recipient_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
