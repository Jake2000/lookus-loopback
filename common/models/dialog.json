{
  "name": "dialog",
  "plural": "dialogs",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "title": {
      "type": "string",
      "description": "Заголовок диалога"
    },
    "users_count": {
      "type": "number",
      "description": "Кол-во пользователей в диалоге"
    },
    "is_grouped": {
      "type": "boolean",
      "default": true,
      "description": "Является ли диалог беседой только между двумя пользователями"
    },
    "is_private": {
      "type": "boolean",
      "default": true,
      "description": "Запрещает писать и добавляться в диалог другим пользователям, не состоящим в диалоге"
    },
    "created": {
      "type": "Date",
      "description": "Дата и время создания диалога  [<b>read-only<b>]"
    },
    "updated": {
      "type": "Date",
      "description": "Дата и время изменения диалога  [<b>read-only<b>]"
    }
  },
  "hidden": ["private_participant_1_id", "private_participant_2_id"],
  "validations": [],
  "relations": {
    "users": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "dialog_id",
      "through": "dialogUser"
    },
    "messages": {
      "type": "hasMany",
      "model": "message",
      "foreignKey": "dialog_id"
    },
    "private_participant_1": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "private_participant_1_id"
    },
    "private_participant_2": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "private_participant_2_id"
    },
    "marker": {
      "type": "belongsTo",
      "model": "marker",
      "foreignKey": "marker_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
